ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g -std=c++17
LIBS += ../bin/Debug-linux-x86_64/utils/libutils.a ../bin/Debug-linux-x86_64/armadillo/libarmadillo.a -lpthread
LDDEPS += ../bin/Debug-linux-x86_64/utils/libutils.a ../bin/Debug-linux-x86_64/armadillo/libarmadillo.a
